# https://chatgpt.com/share/698c9a61-8580-8006-86c4-bb676edfea60
from flask import Flask, jsonify

app = Flask(__name__)

# Route for the home page
@app.route("/")
def home():
    return "Hello! Flask is working. diensh is writing code"

# Route for the user
@app.route("/user")
def get_user():
    # Returning JSON like a proper REST API
    user_data = {
        "name": "Dinesh",
        "role": "DevOps",
        "message": "dinesh is good at devops"
    }
    return jsonify(user_data)

# Run the app
if __name__ == "__main__":
    # host="0.0.0.0" allows access from outside the VM
    app.run(host="0.0.0.0", port=5000)